<project name="deploy-ejb" default="deploy" basedir="./build-file">
    <property environment="env"/>
    <property name="deploy.dir" value="E:\BICI\Logiciel\wildfly-10\wildfly-10\standalone\deployments"/>
    <property name="Clean APJ-warname" value="Clean APJ.war"/>
    <property name="Clean APJ-jarname" value="Clean APJ-ejb.jar"/>
    <property name="Clean APJ-earname" value="Clean APJ.ear"/>
    <property name="srcejb-dir" value="./Clean APJ-ejb/src/"/>
    <property name="srcwar-dir" value="./Clean APJ-war/src/java"/>
    
    <property name="build-Clean APJ-war_war" value="${basedir}/Clean APJ_war" />
    <property name="build-Clean APJ-ejb_jar" value="${basedir}/Clean APJ_jar" />
    <property name="build-Clean APJ-lib" value="${basedir}/lib" />
    
    <property name="buildEar.dir" value="${basedir}/ear"/>
    <property name="webcontent.dir" value="../Clean APJ-war/web"/>
    
    <property name="srcproperties.dir" value="../Clean APJ-ejb/src/java/resources"/>


    <path id="classpath">
        <fileset dir="${basedir}\lib">
            <include name="**/*.jar" />
        </fileset>
    </path>
	
	

	
    <target name="clean" >
        <echo> 
            Compilation Tia Tanindrazana ----------------
        </echo>
        <echo>JDK ${ant.java.version}  ${ant.version}  </echo>
        <echo> clean </echo>
        
        <delete file="${build-Clean APJ-ejb_jar}" />
        <delete file="${build-Clean APJ-war_war}" />
        <delete file="${build-Clean APJ-lib}" />
        <delete file="${basedir}/${Clean APJ-earname}" />
        <delete file="${buildEar.dir}/${Clean APJ-earname}" />
		
        <echo> clean done </echo>
    </target>
	
    <tstamp>
        <format property="dateDuJour" pattern="dd/MM/yyyy hh:mm aa" />
    </tstamp>
	
    <target name="init" depends="clean">
        <echo> initialisation ${dateDuJour} </echo>
        
        <mkdir dir="${build-Clean APJ-war_war}"/>
        <mkdir dir="${build-Clean APJ-war_war}/WEB-INF"/>
        <mkdir dir="${build-Clean APJ-war_war}/WEB-INF/lib"/>
        <mkdir dir="${build-Clean APJ-war_war}/WEB-INF/classes"/>
        <mkdir dir="${build-Clean APJ-war_war}/WEB-INF/classes/META-INF"/>
        
        <mkdir dir="${build-Clean APJ-ejb_jar}"/>
		
		
        <echo file="${webcontent.dir}/dateBuild.txt" append="false" message="${dateDuJour}" />
        
        <copy todir="${build-Clean APJ-war_war}/">
            <fileset dir="${webcontent.dir}" excludes="WEB-INF/**"/>
        </copy>
        <copy todir="${build-Clean APJ-war_war}/WEB-INF/lib/">
            <fileset dir="${basedir}\lib" />
        </copy>

        <copy file="../Clean APJ-ejb/src/java/project.properties" tofile="${build-Clean APJ-ejb_jar}/project.properties" />
		
		
        <echo>  initialisation done </echo>
    </target>
	
    <target name="compile" depends="init">
        <echo> compilation </echo>	
        <javac srcdir="../Clean APJ-ejb/src/java" destdir="${build-Clean APJ-ejb_jar}" nowarn="true" debug="on" deprecation="off" classpathref="classpath" includeantruntime="false" encoding="iso-8859-1">
        </javac>
        <copy todir="${build-Clean APJ-ejb_jar}/i18n">
            <fileset dir="../Clean APJ-ejb/src/java/i18n" includes="**/*.properties" />
        </copy>
        <echo> compilation done </echo>	
    </target>
    
    <target name="buildEjbJar" depends="compile">
        <echo>Build EJB JAR</echo>
        <jar basedir="${build-Clean APJ-ejb_jar}" destfile="${buildEar.dir}/${Clean APJ-jarname}" />
        <copy file="${buildEar.dir}/${Clean APJ-jarname}" todir="${build-Clean APJ-war_war}/WEB-INF/lib/">
        </copy>
        <echo>End Build EJB JAR</echo>
    </target>

    <target name="compileWar" depends="buildEjbJar">
        <echo> compilation </echo>
        <javac srcdir="../Clean APJ-war/src/java" destdir="${build-Clean APJ-war_war}/WEB-INF/classes/" nowarn="true" debug="on" deprecation="off" classpathref="classpath" includeantruntime="false" encoding="iso-8859-1">
            <classpath>
                <pathelement location="${buildEar.dir}/${Clean APJ-jarname}" />
            </classpath>
        </javac>
        <echo> compilation done</echo>
    </target>


    <target name="copieProperties" depends="compileWar">
        <echo> Copie des properties</echo>
        <copy file="${srcproperties.dir}/text.properties" todir="${build-Clean APJ-war_war}/WEB-INF/classes">
        </copy>
        <copy file="${srcproperties.dir}/text_zh.properties" todir="${build-Clean APJ-war_war}/WEB-INF/classes">
        </copy>
        <echo> Fin de la copie </echo>
    </target>
	
	
    <target name="deploy" depends="copieProperties">	
        <echo>${env.JBOSS_HOME}</echo>
        <!--<echo> deployement ear </echo>-->
        <!--                <copy todir="${deploy.dir}">
            <fileset dir="${build.dir}" >
                <include name="${ketrika-earname}"/>
            </fileset>	
        </copy>-->
        <copy todir="${deploy.dir}/CleanAPJ.war">
            <fileset dir="${build-Clean APJ-war_war}" >
                <include name="**/*"/>
            </fileset>	
        </copy>
        <echo> deployement exploded war done </echo>	
        <echo> 
            Compilation Clean APJÂ GENIUS_ART_C [DONE]----------------
        </echo>
		
    </target>	
	
	

</project>
